#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"

using namespace std;
float resut (float x,int n,float  s,int h);
float fact(int n);
void main (){
    float s,p,x;
    int n,k,h;
    s=0;//acumulador
    cout<<"ingrese un numero x y n cantidad de sumas "<<endl;
    cin>>x>>n;
    h=1 ;//signo
    p=resut(x,n,s,h);
    cout<<p;
    getch ();
}
float resut (float x,int n,float s,int h){
    int i,k=0;
    for(i=1;i<=n;i=i+2){
    s = s + h*(pow(x,i)/(fact(i))); // AcumulaciÃ³n
    h=h*-1; // signo
    }
    return s;
}

float fact (int n){
    float m=1;
    for (int i=2 ; i<=n ; i++)
        m=m*i;
    return m;
}

